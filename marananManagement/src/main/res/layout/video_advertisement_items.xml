<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/back_video_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="left|center"
        android:orientation="horizontal"
        android:tag="back" >

        <Button
            android:id="@+id/swipe_check_uncheck"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/tick_gray"
            android:visibility="visible" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/front_video_add"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:gravity="center"
        android:tag="front" >
        
        <TextView
            android:id="@+id/tv_video_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text=""
            android:singleLine="true"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/img_video_add"
            android:layout_width="100dp"
            android:layout_height="55dp"
             android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/tv_video_count"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:contentDescription="@null"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_title_video_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:layout_toLeftOf="@+id/img_video_add"
            android:text=""
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:textStyle="bold" />
        
         <TextView
            android:id="@+id/tv_des_video_add"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="2dp"
            android:layout_below="@+id/tv_title_video_add"
            android:layout_toLeftOf="@+id/img_video_add"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="10sp"
            android:textStyle="normal" />
    </RelativeLayout>

</FrameLayout>