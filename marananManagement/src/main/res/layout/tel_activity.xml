<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:swipe="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_tel_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/financial_bg"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/wall_title"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:textStyle="normal" />

    <com.marananmanagement.swipetodismiss.SwipeListView
        android:id="@+id/lv_tel"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/white"
        android:dividerHeight="2dp"
        android:scrollbars="none"
        swipe:swipeBackView="@+id/back_tel"
        swipe:swipeFrontView="@+id/front_tel"
        swipe:swipeMode="right" />

</LinearLayout>