<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/back_live_image"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="left|center"
        android:orientation="horizontal"
        android:tag="back" >

        <Button
            android:id="@+id/live_check_uncheck"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/tick_gray"
            android:visibility="visible" />

        <Button
            android:id="@+id/live_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/cross_gray"
            android:visibility="visible" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/front_live_image"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:gravity="center"
        android:tag="front" >

        <ImageView
            android:id="@+id/img_live_images"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@null"
            android:scaleType="centerCrop" />
    </RelativeLayout>

</FrameLayout>