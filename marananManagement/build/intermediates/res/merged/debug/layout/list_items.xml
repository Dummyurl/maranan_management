<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv_alerts_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:singleLine="true"
        android:text=""
        android:textColor="@android:color/black"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_sat"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/bg_solid"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:text="@string/Saturday"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_fri"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/bg_solid"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:text="@string/Friday"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_thur"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/bg_solid"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:text="@string/Thursday"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_wed"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/bg_solid"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:text="@string/Wednesday"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_tues"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/bg_solid"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:text="@string/Tuesday"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_mon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/bg_solid"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:text="@string/Monady"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:visibility="gone" />

        <Button
            android:id="@+id/btn_sun"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/bg_solid"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center"
            android:text="@string/Sunday"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_alerts_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@android:color/black"
            android:textSize="15sp"
            android:typeface="serif"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>